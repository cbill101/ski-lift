<resources xmlns:name="http://schemas.android.com/apk/res-auto">

    <!-- Base application theme. -->
    <style name="SkiLiftTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/onPrimaryColor</item>
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <item name="colorOnSecondary">@color/onSecondaryColor</item>
        <item name="colorError">@color/colorError</item>
        <item name="colorOnError">@color/onErrorColor</item>
        <item name="colorSurface">@color/surfaceColor</item>
        <item name="colorOnSurface">@color/onSurfaceColor</item>
        <item name="colorAccent">@color/secondaryColor</item>
        <item name="android:colorBackground">@color/backgroundColor</item>
        <item name="colorOnBackground">@color/onBackgroundColor</item>
        <item name="toolbarStyle">@style/Widget.MaterialComponents.Toolbar.PrimarySurface</item>
        <item name="buttonStyle">@style/SkiLiftTheme.DefaultButton</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
    </style>

    <style name="SkiLiftTheme.DefaultButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:elevation">6dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SkiLiftTheme.OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textSize">16sp</item>
        <item name="android:elevation">2dp</item>
    </style>

    <style name="SkiLiftTheme.TextView.Medium" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="SkiLiftTheme.TextView.Small" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="accountInformation" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="SkiLiftTheme.DefaultToolbar" parent="Widget.MaterialComponents.Toolbar.PrimarySurface">
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:elevation">4dp</item>
    </style>

</resources>
